extends ./layout/index

block contenido 
    main.container.mt-5 
        h1.text-center.mt-5= pagina 
        blockquote.text-center Comentarios de Nuestros Clientes
        include ./layout/bloque_testimoniales
        .row 


            h2.d-block.w-100.text-center Agrega un Testimonial
            
        
            .row.justify-content-center.col
                .col-md-8 
                    form(action="/testimoniales" method="POST")
                        .form-group 
                            label(for="nombre") Nombre 
                            input#nombre(type="text", placeholder="", name="nombre" class="form-control", value=nombre)
                        .form-group 
                            label(for="correo") Correo 
                            input#nombre(type="text", placeholder="", name="correo" class="form-control", value=correo)  
                        .form-group 
                            label(for="mensaje") Mensaje 
                            textarea#mensaje(name="mensaje", cols="10", rows="3" class="form-control")=mensaje
                        input.btn.btn-success.btn-block(type="submit") 
                        if(error)
                            p.text-center.mt-3.alert.col.alert-danger.alerta-existe= error
                            

                         
            